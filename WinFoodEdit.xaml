<Window x:Class="WpfApp4.WinFoodEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="WinFoodEdit" SizeToContent="WidthAndHeight">
    <StackPanel>
        <TextBlock Margin="3" Text="Название" />
        <TextBox Margin="3" Text="{Binding Name}" />
        <TextBlock Margin="3" Text="Количество" />
        <TextBox Margin="3" Text="{Binding Number}" />
        <TextBlock Margin="3" Text="Вес"/>
        <TextBox Margin="3" Text="{Binding Weight}"/>
        <Button Margin="3" Content="Сохранить и закрыть" 
                HorizontalAlignment="Right" 
                Click="SaveClose"/>
    </StackPanel>
</Window>
